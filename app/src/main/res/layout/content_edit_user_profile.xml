<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="auction.org.droidflatauction.EditUserProfile"
    tools:showIn="@layout/app_bar_edit_user_profile">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/user_edit_profile_back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/back_arrow"
            android:background="#fff"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="5dp"
            android:text="Edit Profile"
            android:textColor="#5a5a5a"
            android:textSize="16dp"
            android:textStyle="normal" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="Profile Image"
            android:textColor="#2874b9"
            android:textSize="16dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/user_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
           android:src="@drawable/user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="User"
            android:textColor="#2874b9"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_edit_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#5a5a5a"
            android:textSize="14dp"
            android:background="@null"
            android:textAllCaps="false"
            android:textStyle="normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="Email"
            android:textColor="#2874b9"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_edit_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#5a5a5a"
            android:textSize="14dp"
            android:background="@null"
            android:textAllCaps="false"
            android:textStyle="normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="Password"
            android:textColor="#2874b9"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_edit_profile_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword"
            android:text=""
            android:textColor="#5a5a5a"
            android:textSize="14dp"
            android:background="@null"
            android:textAllCaps="false"
            android:textStyle="normal" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:text="Cell"
            android:textColor="#2874b9"
            android:textSize="16dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_edit_profile_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:layout_marginLeft="5dp"
            android:text=""
            android:textColor="#5a5a5a"
            android:textSize="14dp"
            android:background="@null"
            android:textAllCaps="false"
            android:textStyle="normal" />
    </LinearLayout>

</LinearLayout>
</ScrollView>
