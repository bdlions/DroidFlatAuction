<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="auction.org.droidflatauction.MessageShow"
    tools:showIn="@layout/app_bar_message_show">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff">
        <LinearLayout
            android:id="@+id/uppter_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/message_show_back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/back_arrow"
                android:background="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="5dp"
                android:text="Show Message"
                android:textColor="#5a5a5a"
                android:textSize="16dp"
                android:textStyle="normal" />
        </LinearLayout>

            <ListView
                android:id="@+id/message_show_listview"
                android:layout_width="match_parent"
                android:layout_height="360dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:weightSum="5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Message"
                android:textColor="#5a5a5a"
                android:textSize="14dp"
                android:textStyle="normal"
                android:layout_weight="3"/>
            <EditText
                android:id="@+id/et_inbox_send_message_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:lines="3"
                android:textColor="#5a5a5a"
                android:textSize="14dp"
                android:textStyle="normal"
                android:layout_weight="2"/>
            <Button
                android:id="@+id/btn_inbox_send_message"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textColor="#ffffff"
                android:textSize="18dp"
                android:text="Send"
                android:textAllCaps="false"
                android:background="@drawable/custom_round_corner_blue_button"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>